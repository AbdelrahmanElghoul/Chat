<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#E2FFFFFF</item> <!--default-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.HideActionBar" parent="Theme.AppCompat.Light.NoActionBar">
         <!--menu background color -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColor">@color/menu_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:itemBackground">@color/default_menu_background_color</item>
    </style>`

    <style name="clickableText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/clickableText</item>
    </style>

    <style name="profile">
        <item name="android:layout_width">@dimen/profile_width_height</item>
        <item name="android:layout_height">@dimen/profile_width_height</item>
        <item name="android:contentDescription">@string/profile_IMG</item>
    </style>

    <style name="text_input">
        <item name="android:textColorHint">@color/hint_color</item>
<!--        <item name="android:textColor">@color/default_text_color</item>-->
        <item name="android:backgroundTint">@color/default_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="text_input_layout">
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/average_margin_padding</item>
        <item name="android:layout_marginEnd">@dimen/average_margin_padding</item>
    </style>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_button</item>
<!--        <item name="android:textStyle">bold</item> -->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/default_text_color</item>
        <item name="android:layout_margin">@dimen/average_margin_padding</item>
        <item name="android:padding">@dimen/low_margin_padding</item>
    </style>



<style name="chat_text">
    <item name="android:textSize">@dimen/text_size</item>
    <item name="android:textColor">#C8000000</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:autoLink">all</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">5dp</item>
</style>

</resources>
